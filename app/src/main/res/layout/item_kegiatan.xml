<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:columnCount="5"
    android:padding="10dp"
    android:background="@drawable/border_kegiatan"
    >

    <TextView
        android:layout_column="0"
        android:id="@+id/jam"
        android:text="11:00"
        android:layout_width="50dp"
        android:layout_gravity="center_vertical" />


    <ImageView
        android:layout_column="1"
        android:id="@+id/userPic"
        android:src="@drawable/ic_userpic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="5dp"/>

    <GridLayout
        android:layout_column="2"
        android:rowCount="4"
        android:columnCount="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_row="0"
            android:id="@+id/namaKegiatan"
            android:text="Nama Kegiatan"
            android:textSize="15sp"
            />

        <TextView
            android:layout_row="1"
            android:id="@+id/namaStarter"
            android:text="Oleh: Kuchienkz"
            android:textSize="10sp"/>

        <TextView
            android:layout_row="2"
            android:id="@+id/lokasi"
            android:text="Lokasi: Pedalaman"
            android:textSize="10sp"/>

        <TextView
            android:layout_row="3"
            android:id="@+id/group"
            android:text="Pribadi"
            android:textSize="10sp"/>
    </GridLayout>

    <GridLayout
        android:columnCount="2"
        android:rowCount="2"
        android:layout_column="3"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:layout_column="0"
            android:layout_row="0"
            android:text="Check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_column="1"
            android:layout_row="0"
            android:text="Mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/isCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />

        <Switch
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/isMute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            />
    </GridLayout>
</GridLayout>